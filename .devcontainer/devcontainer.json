{
    "name": "VERL",
    "build": {
      "context": "..",
      "dockerfile": "../docker/Dockerfile.ngc.vllm",
    },
    "containerEnv": {
      "http_proxy": "${localEnv:http_proxy}",
      "https_proxy": "${localEnv:https_proxy}",
      "no_proxy": "${localEnv:no_proxy}"
    },
    "runArgs": [
      "--shm-size=10gb",
      "--runtime=nvidia", 
      "--cap-add=SYS_ADMIN",
      "--network", "host"
    ],
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "ms-toolsai.jupyter",
          "esbenp.prettier-vscode",
          "BazelBuild.vscode-bazel",
          "GitHub.copilot",
          "StackBuild.bazel-stack-vscode",
          "ms-toolsai.datawrangler",
          "mhutchie.git-graph",
          "donjayamanne.githistory",
          "GitHub.copilot-chat",
          "VisualStudioExptTeam.vscodeintellicode",
          "ms-toolsai.vscode-jupyter-cell-tags",
          "ms-toolsai.jupyter-renderers",
          "ms-toolsai.vscode-jupyter-slideshow",
          "yzhang.markdown-all-in-one",
          "yzane.markdown-pdf",
          "shd101wyy.markdown-preview-enhanced",
          "bierner.markdown-preview-github-styles",
          "bierner.markdown-mermaid",
          "goessner.mdmath",
          "DavidAnson.vscode-markdownlint",
          "ms-python.vscode-pylance",
          "ms-python.debugpy",
          "redhat.vscode-yaml",
          "ms-python.autopep8",
          "ms-python.black-formatter",
          "ms-python.isort",
          "ms-toolsai.jupyter-keymap",
          "vscode-icons-team.vscode-icons",
          "anyscalecompute.ray-distributed-debugger"
        ]
      }
    },

    "postCreateCommand":"git config --global user.name 'OrNot-DevContainer' && git config --global user.email 'ornot2008@yahoo.com' && pip install -e . "
  }